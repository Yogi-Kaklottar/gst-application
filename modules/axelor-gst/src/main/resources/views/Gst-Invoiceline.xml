<?xml version="1.0" encoding="UTF-8"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axel or.com/xml/ns/object-views/object-views_5.2.xsd">

  <grid name="gst-invoice-invoiceline-grid" title="Invoiceline" model="com.axelor.gst.db.Invoiceline">
     <field name="product" />
      <field name="hsbn"/>
      <field name="item"/>
      <field name="qty"/>
      <field name="price"/>
      <field name="netamount"/>
       <field name="gstrate"/>
      <field name="igst"/>
      <field name="csgst"/>
      <field name="sgst"/>
      <field name="grossamount"/>
  </grid>

  <form name="gst-invoice-invoiceline-form" title="Invoiceline"   model="com.axelor.gst.db.Invoiceline" >
    <panel title="Overview">
      <field name="product" onChange="Change-action-gst-attrs-product" />
      <field name="hsbn"/>
      <field name="item"/>
      <field name="qty"/>
      <field name="price"/>
      <field name="netamount"/>
       <field name="gstrate"/>
      <field name="igst"/>
      <field name="csgst"/>
      <field name="sgst"/>
      <field name="grossamount"/>

    </panel>
  </form>


  <action-attrs name="Change-action-gst-attrs-product">
    <attribute name="value" for="item" expr="eval: __repo__(Product).all().filter('self.id = ?',product).fetchOne().name" />
  </action-attrs>


<action-method name="onsave-action-gst-method-invoiceline">
    <call class="com.app.gst.InvoicelineData" method="setInvoiceLineData" />
  </action-method>


  </object-views>
