<?xml version="1.0" encoding="UTF-8"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axel or.com/xml/ns/object-views/object-views_5.2.xsd">

  <grid name="gst-invoice-grid" title="Invoice"
    model="com.axelor.gst.db.Invoice">
    <field name="status" />
    <field name="company" />
    <field name="reference" />
    <field name="curruntDate" />
    <field name="priority" />
    <field name="party" />
    <field name="partyContact" />
    <field name="invoiceAddress" />
    <field name="shippingAddress" />
    <field name="isUseInVoiceAddressAsShipping" />
    <field name="netAmount" />
    <field name="netIgst" />
    <field name="netCsgst" />
    <field name="netSgst" />
    <field name="grossAmount" />
    <field name="invoiceItemList" />

  </grid>

  <form name="gst-invoice-form" title="Invoice"
    model="com.axelor.gst.db.Invoice"
    onNew="action-gst-attrs-invoice-load,action-gst-record-invoice-company-default">
    <toolbar>
      <button name="GstInvoiceBtn" title="GstInvoice"
        onClick="action-gst-invoice-btnClick" />
    </toolbar>
    <panel>
      <panel title="Overview" colSpan="8">
        <field name="status" widget="NavSelect" colSpan="12" />
      </panel>
      <panel colSpan="4">
        <button name="btnValidate" title="validate" showIf="status == 'Draft'" onClick="action-gst-invoice-onclick-validate,save" colSpan="12" />
        <button name="btnPaid" title="Paid" showIf="status == 'Validated'"    onClick="action-gst-invoice-onclick-paid,save" colSpan="12" />
        <button name="btnCancel" title="Cancel"  onClick="action-gst-invoice-onclick-cancel,save" colSpan="12" />

      </panel>
    </panel>
    <panel>
      <field name="company" onChange="action-gst-invoice-party-change-calculation" />
      <field name="reference" />
      <field name="curruntDate" />
      <field name="priority" />
      <field name="party"	 onChange="action-gst-invoice-party-onchange-defaultset,action-gst-invoice-party-change-calculation" />
      <field name="partyContact" onSelect="action-gst-attrs-invoice-party-select-setContact" />
      <field name="invoiceAddress" colSpan="12"	onChange="change-action-gst-attrs-invoice-shippingaddress" onSelect="action-gst-attrs-invoice-party-select-setInvoiceAddress"/>
      <field name="isUseInVoiceAddressAsShipping" colSpan="4" onChange="change-action-gst-attrs-invoice-shippingaddress"/>
      <field name="shippingAddress" colSpan="8" onSelect="action-gst-attrs-invoice-party-select-setShippingAddress" />

    </panel>
    <panel>
      <field name="invoiceItemList" colSpan="12"	onChange="action-gst-method-invoice-onsave" />
    </panel>
    <panel>
      <field name="netAmount" />
      <field name="netIgst" />
      <field name="netCsgst" />
      <field name="netSgst" />
      <field name="grossAmount" />

    </panel>
  </form>

  <kanban name="gst-invoice-kanban" title="Invoice"
    model="com.axelor.gst.db.Invoice" columnBy="status"
    sequenceBy="priority" draggable="false">
    <field name="reference" />
    <field name="company" />
    <field name="curruntDate" />
    <field name="party" />
    <field name="grossAmount" />
    <field name="priority" />
    <hilite color="danger" if="priority &lt;= 3" />
    <hilite color="success" if="priority &gt;= 7" />
    <hilite color="info" if="priority &gt;= 5" />
    <hilite color="warning" if="priority &lt; 5" />
    <template><![CDATA[
    <h4>{{reference}}</h4>
    <div class="card-body">Party Name:{{party.name}}</div>
    <div class="card-body">Company Name:{{company.name}}</div>
    <div class="card-footer">
        <span>{{curruntDate|date:'yyyy-MM-dd HH:mm:ss'}}</span>
    </div>
    <div class="card-body">Gross Ammount:{{grossAmount}}</div>
    ]]></template>
  </kanban>


  <action-attrs name="action-gst-attrs-invoice-load">
    <attribute name="value" for="curruntDate"  expr="eval: __datetime__" />
    <attribute name="value" for="invoiceItemList"      expr="eval: _invoiceItemList" />

  </action-attrs>

  <action-record
    name="action-gst-record-invoice-company-default"
    model="com.axelor.gst.db.Company">
    <field name="company"	expr="eval: __repo__(Company).all().fetchOne()" />
  </action-record>



  <action-attrs name="change-action-gst-attrs-invoice-shippingaddress">
    <attribute name="value"  expr="eval: isUseInVoiceAddressAsShipping ?  __this__.invoiceAddress  : null" 	for="shippingAddress"  />
  </action-attrs>


<action-attrs name="action-gst-attrs-invoice-party-select-setContact">
    <attribute name="domain" for="partyContact"   expr="eval: &quot; self.party = :party &quot;" />
  </action-attrs>

<action-attrs name="action-gst-attrs-invoice-party-select-setInvoiceAddress">
    <attribute name="domain" for="invoiceAddress"   expr="eval: &quot; self.party = :party &quot;" />
  </action-attrs>

  <action-attrs name="action-gst-attrs-invoice-party-select-setShippingAddress">
    <attribute name="domain" for="shippingAddress"   expr="eval: &quot; self.party = :party &quot;" />
  </action-attrs>


  <action-method name="action-gst-invoice-onclick-validate">
    <call class="com.axelor.app.gst.controller.GstSequenceController"		method="setGstInvoicesequence" />
  </action-method>

  <action-method name="action-gst-invoice-onclick-paid">
    <call class="com.axelor.app.gst.controller.GstInvoiceController"		method="setInvoicePaid" />
  </action-method>

  <action-method name="action-gst-invoice-onclick-cancel">
    <call class="com.axelor.app.gst.controller.GstInvoiceController"		method="setInvoiceCancel" />
  </action-method>


  <action-method    name="action-gst-invoice-party-onchange-defaultset">
    <call class="com.axelor.app.gst.controller.GstInvoiceController"		method="setInvoicePatryDefault" />
  </action-method>

  <action-method name="action-gst-method-invoice-onsave">
    <call class="com.axelor.app.gst.controller.GstInvoiceController" method="setInvoiceComputation" />
  </action-method>

  <action-method    name="action-gst-invoice-party-change-calculation">
    <call class="com.axelor.app.gst.controller.GstInvoiceController"    method="setInvoiceComputationComapanyPartyChange" />
  </action-method>
  <action-report output="invoice"
    name="action-gst-invoice-btnClick" design="Invoice.rptdesign">
    <param name="id" expr="eval: __self__.id" />
    <param name="location"
      expr='eval:com?.axelor?.app?.AppSettings?.get()?.getPath("file.upload.dir", "")+"/"' />
  </action-report>

</object-views>
