<?xml version="1.0" encoding="UTF-8"?>
<domain-models
  xmlns="http://axelor.com/xml/ns/domain-models"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/domain-models http://axelor.com/xml/ns/domain-models/domain-models_5.2.xsd">

  <module name="gst" package="com.axelor.gst.db" />

  <entity name="Address">
    <string name="type" required="true"  selection="gst.address.type.select"/>
    <string name="line1" required="true"/>
    <string name="line2" />
    <many-to-one name="city" ref="com.axelor.gst.db.City"/>
    <many-to-one name="state" ref="com.axelor.gst.db.State" />
    <many-to-one name="country"	ref="com.axelor.gst.db.Country" required="true" />
    <string name="pinCode"/>
    <many-to-one name="party" ref="com.axelor.gst.db.Party"></many-to-one>
     <string name="fullAddress" namecolumn="true" search="line1,city,state,country,pinCode">
    <![CDATA[
    if (line1 == null) {
        return null;
    }
    if (pinCode == null) {
        return line1 + "," + city.getName() + ","+ state.getName() + "," + country.getName();
    }
    return line1 +"," + city.getName() + ","+ state.getName() + "," + country.getName()+ "," + pinCode;
    ]]></string>

  </entity>

</domain-models>
